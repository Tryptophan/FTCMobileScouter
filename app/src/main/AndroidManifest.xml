<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.quadx.jacob.mobilescouter" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.quadx.jacob.mobilescouter.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.quadx.jacob.mobilescouter.FieldActivity"
            android:label="@string/title_activity_field"
            android:parentActivityName="com.quadx.jacob.mobilescouter.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.quadx.jacob.mobilescouter.MainActivity" />
        </activity>
        <activity
            android:name="com.quadx.jacob.mobilescouter.FieldLoadActivity"
            android:label="@string/title_activity_field_load"
            android:parentActivityName="com.quadx.jacob.mobilescouter.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.quadx.jacob.mobilescouter.MainActivity" />
        </activity>
        <activity
            android:name="com.quadx.jacob.mobilescouter.PitActivity"
            android:label="@string/title_activity_pit"
            android:parentActivityName="com.quadx.jacob.mobilescouter.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.quadx.jacob.mobilescouter.MainActivity" />
        </activity>
        <activity
            android:name="com.quadx.jacob.mobilescouter.PitLoadActivity"
            android:label="@string/title_activity_pit_load"
            android:parentActivityName="com.quadx.jacob.mobilescouter.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.quadx.jacob.mobilescouter.MainActivity" />
        </activity>
    </application>
</manifest>
