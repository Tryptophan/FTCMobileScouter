<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.jacob.mobilescouter.PitActivity">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true">
        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="fill_parent">

            <EditText
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:ems="10"
                android:id="@+id/teamNumber"
                android:hint="Team Number"
                android:layout_marginBottom="30dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:layout_marginBottom="30dp"
                android:id="@+id/autoScore"
                android:hint="Autonomous Score"
                android:layout_below="@+id/teamNumber"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:layout_marginBottom="30dp"
                android:id="@+id/teleopScore"
                android:hint="Teleop Score"
                android:layout_below="@+id/autoScore"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:ems="10"
                android:layout_marginBottom="30dp"
                android:id="@+id/autoNotes"
                android:hint="Autonomous Notes"
                android:layout_below="@+id/teleopScore"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:ems="10"
                android:layout_marginBottom="30dp"
                android:id="@+id/teleopNotes"
                android:hint="Teleop Notes"
                android:layout_below="@+id/autoNotes"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:layout_marginBottom="30dp"
                android:id="@+id/avgScore"
                android:hint="Average Score"
                android:layout_below="@+id/teleopNotes"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Button
                android:layout_width="177dp"
                android:layout_height="wrap_content"
                android:text="Save"
                android:id="@+id/pitSaveButton"
                android:layout_below="@+id/avgScore"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
